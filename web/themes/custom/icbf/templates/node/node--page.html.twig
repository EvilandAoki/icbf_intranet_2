{#
/**
 * @file
 * Theme override to display a node, basado en el template de core/themes/stable9.
 *
 * Available variables:
 * - node: The node entity with acceso limitado (ver @see).
 * - label: (optional) Title of the node.
 * - content: All node items. Use {{ content }} or subsets {{ content.field_xxx }}.
 * - author_picture, metadata, date, author_name, url, display_submitted, etc.
 * - attributes, title_attributes, content_attributes, author_attributes.
 * - title_prefix, title_suffix.
 * - view_mode, teaser, page (flags).
 *
 * @see template_preprocess_node()
 */
#}
<article{{ attributes.addClass('node', 'node--type-' ~ node.bundle()|clean_class, 'card', 'mb-4') }}>
  {{ title_prefix }}
  {# Si no es vista “page” imprimimos título enlazado #}
  {% if not page %}
    <header class="card-header">
      <h2{{ title_attributes.addClass('h5', 'mb-0') }}>
        <a href="{{ url }}" rel="bookmark">{{ label }}</a>
      </h2>
    </header>
  {% endif %}

  {# Meta de autor y fecha #}
  {% if display_submitted %}
    <footer class="card-footer text-muted small">
      {% if author_picture %}
        <span class="me-2 align-middle">{{ author_picture }}</span>
      {% endif %}
      <span>
        {{ 'Submitted by'|t }} {{ author_name }} {{ date }}
      </span>
      {{ metadata }}
    </footer>
  {% endif %}
  {# Contenido del nodo #}
  <div{{ content_attributes.addClass('card-body') }}>
    {{ content }}
  </div>

  {{ title_suffix }}
</article>
